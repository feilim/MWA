<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.Todo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>WE4.1 List</name>
    <description>
        Webelevate 4.1 Assesment 2 Angular Todo List SPA App
    </description>
    <author email="colum.jones@webelevate.ie" href="http://http://learning.digitalskillsacademy.com">
        Colum Jones WE4.1 MWA
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
         <icon src="icon.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
